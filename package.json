{
	"name": "lyrics-extractor",
	"version": "3.0.0",
	"description": "対応サイトの歌詞だけを抽出して見やすく表示するブラウザ拡張",
	"scripts": {
		"dev": "wxt -b chromium",
		"dev:firefox": "wxt -b firefox",
		"build": "wxt build",
		"build:chromium": "wxt build -b chromium",
		"build:firefox": "wxt build -b firefox",
		"check": "wxt check",
		"format": "biome format --fix ./src",
		"lint": "biome lint --fix ./src",
		"postinstall": "wxt prepare && lefthook install"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/AkaakuHub/LyricsExtractor.git"
	},
	"keywords": [],
	"author": "Akaaku",
	"license": "MIT",
	"type": "module",
	"bugs": {
		"url": "https://github.com/AkaakuHub/LyricsExtractor/issues"
	},
	"homepage": "https://github.com/AkaakuHub/LyricsExtractor#readme",
	"devDependencies": {
		"@biomejs/biome": "^2.3.7",
		"@types/node": "^24.10.1",
		"lefthook": "^2.0.4",
		"typescript": "^5.9.3",
		"wxt": "^0.20.11"
	}
}
